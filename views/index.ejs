<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>KanBanJS</title>
    <link href="bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="bower_components/dragula.js/dist/dragula.min.css" rel="stylesheet">
    <link href="stylesheets/style.css" rel="stylesheet">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

<!-- Navigation -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">KANBAN JS</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                    <a href="#">Home</a>
                </li>
                <li>
                    <a href="#" class="button-new-postit" data-toggle="modal" data-target="#login-modal"> New Postit</a>
                </li>
                <li>
                    <a href="#">Parameters</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">

    <div class="row">

        <div class="col-lg-4 text-center column-container">
            <div class="panel panel-primary">
                <div class="header-column panel-heading">Backlog</div>
                <div id="backlog" class="panel-body column">
                    <%
                    for (var i = 0; i < posts.length; i++){
                    if (posts[i].dataValues.type == "backlog"){
                    %>
                    <div class="panel panel-info post-it">
                        <h1 class="panel-heading">
                            <%= posts[i].dataValues.title; %>
                        </h1>
                        <div class="panel-body post-it-container">
                            <%= posts[i].dataValues.content; %>
                        </div>

                    </div>
                    <%
                    }}
                    %>

                </div>
            </div>

        </div>


        <div class="col-lg-4 text-center column-container">
            <div class="panel panel-primary">
                <div class="header-column panel-heading">todo</div>
                <div id="todo" class="panel-body column">



                </div>
            </div>
        </div>

        <div class="col-lg-4 text-center column-container">
            <div class="panel panel-primary">
                <div class="panel-heading header-column ">doing</div>
                <div id="doing" class="panel-body column">




                </div>
            </div>
        </div>
    </div>

</div>
<div class="back-add-postit"></div>
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel" id= "login-modal">
    <div id="addPostitDialog" class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="gridSystemModalLabel">New Postit</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="form-add-postit" method="post" action="/newpostit">
                    <fieldset>

                        <div class="form-group">
                            <label class="col-md-8 col-md-offset-2" for="form-add-postit-title">Title</label>
                            <div class="col-md-8 col-md-offset-2">
                                <input id="form-add-postit-title" name="postit[title]" type="text" placeholder="" class="form-control input-md" required="">

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-8 col-md-offset-2" for="form-add-postit-content">Content</label>
                            <div class="col-md-8 col-md-offset-2">
                                <textarea class="form-control" id="form-add-postit-content" name="postit[content]"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-8 col-md-offset-2" for="form-add-postit-valid"></label>
                            <div class="col-md-8 col-md-offset-2">
                                <button id="form-add-postit-valid" name="form-add-postit-valid" class="btn btn-success">Create</button>
                                <button id="form-add-postit-cancel" name="form-add-postit-cancel" class="btn btn-danger" data-dismiss="modal" aria-label="Close">Cancel</button>
                            </div>
                        </div>

                    </fieldset>
                </form>

            </div>

        </div>

    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script src="bower_components/jquery/dist/jquery.min.js"></script>
<script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="bower_components/dragula.js/dist/dragula.min.js"></script>
<script type="application/javascript">
    jQuery(document).ready(function () {
        dragula([document.getElementById("backlog"), document.getElementById("todo"), document.getElementById("doing")]);
        jQuery('.button-new-postit').click(function () {
            jQuery('.back-add-postit').fadeIn();
            jQuery('#login-modal').fadeIn();
        });

        jQuery('#form-add-postit-cancel, #form-add-postit-valid').click(function () {
            jQuery('.back-add-postit').fadeOut();
            jQuery('#login-modal').fadeOut();
        });
    });
</script>
</body>

</html>
