<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>KanBanJS</title>
    <link href="bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="bower_components/dragula.js/dist/dragula.min.css" rel="stylesheet">
    <link href="stylesheets/style.css" rel="stylesheet">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

<!-- Navigation -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">KANBAN JS</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                    <a href="#">Home</a>
                </li>
                <li>
                    <a href="#">Parameters</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">

    <div class="row">

        <div class="col-lg-4 text-center column-container">
            <div class="panel panel-primary">
                <div class="header-column panel-heading">Backlog</div>
                <div id="backlog" class="panel-body column">

                    <%
                    for (var i = 0; i < posts.length; i++){
                    if (posts[i].type == "backlog"){
                    %>
                    <div class="panel panel-info post-it">
                        <h1 class="panel-heading">
                            <%= posts[i].title; %>
                        </h1>
                        <div class="panel-body post-it-container">
                            <%= posts[i].content; %>
                        </div>

                    </div>
                    <%
                    }}
                    %>

                </div>
            </div>

        </div>


        <div class="col-lg-4 text-center column-container">
            <div class="panel panel-primary">
                <div class="header-column panel-heading">todo</div>
                <div id="todo" class="panel-body column">

                    <%
                    for (var i = 0; i < posts.length; i++){
                    if (posts[i].type == "todo"){
                    %>
                    <div class="panel panel-info post-it">
                        <h1 class="panel-heading">
                            <%= posts[i].title; %>
                        </h1>
                        <div class="panel-body post-it-container">
                            <%= posts[i].content; %>
                        </div>

                    </div>
                    <%
                    }}
                    %>

                </div>
            </div>
        </div>

        <div class="col-lg-4 text-center column-container">
            <div class="panel panel-primary">
                <div class="panel-heading header-column ">doing</div>
                <div id="doing" class="panel-body column">

                    <%
                    for (var i = 0; i < posts.length; i++){
                    if (posts[i].type == "doing"){
                    %>
                    <div class="panel panel-info post-it">
                        <h1 class="panel-heading">
                            <%= posts[i].title; %>
                        </h1>
                        <div class="panel-body post-it-container">
                            <%= posts[i].content; %>
                        </div>

                    </div>
                    <%
                    }}
                    %>

                </div>
            </div>
        </div>
    </div>

</div>

<script src="bower_components/jquery/dist/jquery.min.js"></script>
<script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="bower_components/dragula.js/dist/dragula.min.js"></script>
<script type="application/javascript">
    jQuery(document).ready(function () {
        dragula([document.getElementById("backlog"), document.getElementById("todo"), document.getElementById("doing")]);
    });
</script>
</body>

</html>
