<% include partials/header.ejs %>

<body>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-offset-4 col-md-4" id="box">
            <h2>Join a project</h2>

            <hr>

            <form class="form-horizontal" action="/joinproject" method="post" id="joinproject_form">
                <fieldset>

                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-group">
                                <label class="input-group-addon"><i class="glyphicon glyphicon-book label-new-project"> Project</i></label>
                                <select name="project" id="project_list" class="form-control">
                                    <% projects.forEach(function(project){ %>
                                    <option value="<%= project.id %>"><%= project.title %></option>
                                    <% }); %>

                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <a href="/" type="submit" class="btn btn-md btn-warning button-sigup">Return</a>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-md btn-success button-sigup">Join</button>
                        </div>
                    </div>

                </fieldset>
            </form>

        </div>
    </div>
</div>
</body>
</html>
